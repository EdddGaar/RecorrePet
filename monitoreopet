<script>
// URL de tu publicaci√≥n CSV de Google Sheets
const csvUrl = "https://docs.google.com/spreadsheets/d/e/2PACX-1vR3wyQ_tfQmKbolsMwfrQwflaXkc3FcThL6KnSU-6YA2YCJNr5fA9ecEeE5gyiB4KD59DlYQ211Jhjr/pub?gid=1537165169&single=true&output=csv";
const proxiedUrl = `https://api.allorigins.win/raw?url=${encodeURIComponent(csvUrl)}`;

let totalChart, origenChart;

async function updateDashboard() {
  try {
    const res = await fetch(proxiedUrl);
    const text = await res.text();
    // Parseo robusto de CSV
    const rows = text.split("\n").map(r => r.split(/,(?=(?:[^"]*"[^"]*")*[^"]*$)/).map(c => c.replace(/(^"|"$)/g,'')));
    const data = rows.slice(1).filter(r => r.length > 1);
    
    // Mapeo basado en tu estructura actual:
    // Col A (0): Fecha/Timestamp
    // Col U (20): ID (PET-XXX)
    // Col V (21): Origen (WhatsApp Bot / Formulario)
    // Col X (23): Status Mail/QR (‚úÖ)
    
    const total = data.length;
    const ws = data.filter(r => r[21]?.toLowerCase().includes('whats')).length;
    const form = data.filter(r => r[21]?.toLowerCase().includes('form')).length;
    const qrs = data.filter(r => r[23]?.includes('‚úÖ')).length;

    // Procesar Datos para Gr√°fico de L√≠neas (Evoluci√≥n Temporal)
    const fechasMap = {};
    data.forEach(r => {
      if(r[0]) {
        const fechaObj = new Date(r[0]);
        if(!isNaN(fechaObj)) {
          const f = fechaObj.toLocaleDateString();
          fechasMap[f] = (fechasMap[f] || 0) + 1;
        }
      }
    });

    const etiquetasFechas = Object.keys(fechasMap).sort((a,b) => new Date(a) - new Date(b));
    let acumulado = 0;
    const datosAcumulados = etiquetasFechas.map(f => acumulado += fechasMap[f]);

    // Actualizar Cifras en el HTML
    document.getElementById("total").textContent = total;
    document.getElementById("countWhatsApp").textContent = ws;
    document.getElementById("countForm").textContent = form;
    document.getElementById("countQRs").textContent = qrs;
    document.getElementById("lastUpdate").textContent = '√öltima actualizaci√≥n: ' + new Date().toLocaleTimeString();

    // Dibujar Gr√°ficos
    renderLineChart(etiquetasFechas, datosAcumulados);
    renderDoughnutChart(ws, form);

  } catch (e) { 
    console.error("Error en sincronizaci√≥n:", e); 
    document.getElementById("lastUpdate").textContent = 'Error al conectar con los datos.';
  }
}

function renderLineChart(labels, dataPoints) {
  const ctx = document.getElementById('totalChart').getContext('2d');
  if(totalChart) totalChart.destroy();
  totalChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: labels,
      datasets: [{
        label: 'Inscritos',
        data: dataPoints,
        borderColor: '#38bdf8',
        backgroundColor: 'rgba(56, 189, 248, 0.1)',
        borderWidth: 3,
        fill: true,
        tension: 0.4,
        pointBackgroundColor: '#38bdf8',
        pointRadius: 5
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: { legend: { display: false } },
      scales: {
        y: { beginAtZero: true, grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#94a3b8' } },
        x: { grid: { display: false }, ticks: { color: '#94a3b8' } }
      }
    }
  });
}

function renderDoughnutChart(ws, form) {
  const ctx = document.getElementById('origenChart').getContext('2d');
  if(origenChart) origenChart.destroy();
  origenChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: ['WhatsApp', 'Formulario'],
      datasets: [{
        data: [ws, form],
        backgroundColor: ['#22c55e', '#6366f1'],
        hoverOffset: 10,
        borderWidth: 0
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: { position: 'bottom', labels: { color: '#f8fafc', padding: 20, font: { size: 14 } } }
      }
    }
  });
}

// Ejecuci√≥n inicial y ciclo de refresco
updateDashboard();
setInterval(updateDashboard, 120000); // Se actualiza autom√°ticamente cada 2 minutos
</script>
